/* pages/saveSuccess/saveSuccess.wxss */

page, .container{
	height: 100%;
	overflow: hidden;
	position: relative;
}
.bg{
	width: 100%;
	height: 100%;
	position: absolute;
	top: 0;
	left: 0;
	z-index: -1;
}

.txt{
	margin-top: 50rpx;
}

.txt1{
	color: #000;
	font-size: 52rpx;
	font-family: 'PingFangSC-Semibold';
	font-weight: 600;
	line-height: 74rpx;
	padding-left: 60rpx;
}

.txt2{
	color: #000;
	font-size: 28rpx;
	line-height: 40rpx;
	padding-left: 60rpx;
}

.print{
	display: block;
	margin: 30rpx auto 0;
	width: 650rpx;
	height: 160rpx;
}

.pic-box{
	position: relative;
	top: -150rpx;
	width: 694rpx;
	margin: 0 auto;
	transform: rotateX(90deg);
}

.pic-box.on {
	transform-origin: 0 0;
	transform: rotateX(0);
	animation: print 2s linear;
}

.pro-bg{
	width: 100%;
	height: 800rpx;
}

.pro{
	width: 480rpx;
	height: 700rpx;
	position: absolute;
	top: 126rpx;
	left: 107rpx;
}

@keyframes print {
	0% {
		top: -90rpx;
		transform: rotateX(90deg);
	}
	25% {
		top: -108rpx;
		transform: rotateX(67deg);
	}
	50% {
		top: -120rpx;
		transform: rotateX(45deg);
	}
	75% {
		top: -135rpx;
		transform: rotateX(22deg);
	}
	100% {
		top: -150rpx;
		transform: rotateX(0);
	}
}