/* pages/address/address.wxss */

.input-placeholder {
  color: rgba(0, 0, 0, 0.3);
}

.title {
  font-size: 48rpx;
  color: #262628;
  font-family: PingFangSC-Medium;
  margin: 60rpx 60rpx 80rpx;
}

.info-wrapper {
  padding: 0 60rpx;
}

.info-wrapper .inp {
  padding: 24rpx 0;
  color: #262628;
  font-size: 24rpx;
  height: 100rpx;
  line-height: 50rpx;
  min-height: none;
  border: none;
  border-bottom: 1px solid rgba(0, 0, 0, 0.05);
  box-sizing: border-box;
}

.info-wrapper .inp.active {
  color: rgba(0, 0, 0, 0.3);
}

.btn-wrapper {
  margin-top: 80rpx;
  padding: 0 60rpx;
}

.btn-wrapper .btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 28rpx;
  color: #fff;
  background: #3d3bee;
}
