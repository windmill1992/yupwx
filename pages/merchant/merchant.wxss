/* pages/merchant/merchant.wxss */

.why {
  padding: 80rpx 0 60rpx;
  font-size: 56rpx;
  color: #000;
  line-height: 80rpx;
  text-align: center;
  font-family: 'PingFangSC-Medium';
  font-weight: 600;
}

.reasons {
  padding: 0 60rpx;
}

.item {
  margin-bottom: 30rpx;
}

.item .num {
  font-family: 'PingFangSC-Thin';
  font-size: 72rpx;
  color: #e04f4b;
  line-height: 1.2;
}

.item .title {
  font-family: 'PingFangSC-Medium';
  font-size: 32rpx;
  color: #000;
  font-weight: 600;
  margin: 20rpx 0;
}

.item .txt {
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.5);
  line-height: 2;
  text-align: justify;
}

.btn-wrapper {
  width: 100%;
  height: 88rpx;
  padding: 0 60rpx;
  margin-top: 120rpx;
  box-sizing: border-box;
}

.btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  background: #3d3bee;
}
