.btn {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 88rpx;
}

.btn .nav-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
  padding: 0;
  background: #3d3bee;
  border-radius: 0;
  border: none;
  outline: none;
}

.btn .nav-btn.no {
  background: #ccc;
}

.btn .nav-btn button{
	display: inline;
	outline: none;
	border: none;
	font-size: 28rpx;
	color: #fff;
	background: none;
	border-radius: 0;
}

.btn .nav-btn button::after{
	outline: none;
	border: none;
}

.btn .btn1 {
  width: 100%;
  height: 88rpx;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  line-height: 88rpx;
  box-shadow: 0 0 12px 0 rgba(0, 0, 0, 0.05);
  background: #f5a623;
}

.btn .btn1 .icon {
  width: 64rpx;
  height: 36rpx;
  margin-left: 12rpx;
  color: #f5a623;
  font-size: 22rpx;
  position: relative;
}

.btn .btn1 .icon .arr {
  width: 100%;
  height: 100%;
  vertical-align: top;
}

.btn .btn1 .icon .dot {
  position: absolute;
  left: 4rpx;
  top: 16rpx;
  width: 4rpx;
  height: 4rpx;
}

.btn .btn1 .icon text {
  position: absolute;
  display: inline-block;
  width: 100%;
  height: 36rpx;
  line-height: 36rpx;
  text-align: center;
  left: 6rpx;
  top: 0;
}

.to-index{
	position: fixed;
	width: 160rpx;
	height: 160rpx;
	right: 10rpx;
	bottom: 90rpx;
}

.to-index image{
	width: 100%;
	height: 100%;
}