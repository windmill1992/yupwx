/* pages/testDetail/testDetail.wxss */

page{
	overflow: hidden;
}

.head {
  padding: 30rpx;
  position: relative;
	border-bottom: 1px solid #f3f3f3;
}

.head .goods-wrapper {
  margin-bottom: 30rpx;
}

.head .pic {
  width: 196rpx;
  height: 196rpx;
	margin-right: 20rpx;
}

.head .pic image{
	width: 100%;
	height: 100%;
}

.head .title{
	font-size: 32rpx;
	font-family: PingFangSC-Medium;
	color: #000;
	margin-bottom: 10rpx;
}

.head .other{
	font-size: 22rpx;
	color: #9b9b9b;
}

.head .apply-list image{
	width: 48rpx;
	height: 48rpx;
	border-radius: 100%;
	margin-right: 10rpx;
}

.head .apply-num {
	font-size: 20rpx;
	color: #000;
}

.head .txt {
  font-size: 24rpx;
  color: #fff;
	padding: 24rpx 20rpx;
	line-height: 1.5;
	letter-spacing: 1rpx;
	background: #AE985B;
}

.yup-box{
	position: relative;
	padding: 30rpx;
	color: #000;
	text-align: center;
	letter-spacing: .1rpx;
}

.yup-box .txt1{
	font-size: 24rpx;
}

.yup-box .num{
	font-size: 72rpx;
	line-height: 100rpx;
	padding: 20rpx 0;
	font-weight: 600;
	font-family: PingFangSC-Semibold;
}

.yup-box .min{
	font-size: 22rpx;
	background: #f8f8f8;
	line-height: 48rpx;
	padding: 0 20rpx;
	display: inline-block;
}

.yup-box .get{
	position: absolute;
	font-size: 24rpx;
	right: 30rpx;
	top: 30rpx;
}

.op-list{
	padding: 30rpx;
}

.op-list .item{
	padding: 30rpx 0;
	border-bottom: 1px solid #f3f3f3;
}

.op-list .item .title{
	font-size: 32rpx;
	font-weight: 600;
	font-family: PingFangSC-Medium;
	color: #050505;
	margin-bottom: 10rpx;
}

.op-list .item .txt{
	font-size: 24rpx;
	color: #1b1b1b;
}

.op-list .item .btn{
	width: 128rpx;
	height: 64rpx;
	text-align: center;
	color: #fff;
	font-size: 24rpx;
	line-height: 64rpx;
	background: #3d3bee;
}

.op-list .item .btn.ed{
	background: #d9d9d9;
}

.back-index {
  position: absolute;
  right: 0;
  bottom: 0;
  padding: 0 20rpx;
  height: 52rpx;
  line-height: 52rpx;
  font-size: 24rpx;
  color: #fff;
  background: #3d3bee;
  border-top-left-radius: 52rpx;
  border-bottom-left-radius: 52rpx;
}

.pic-wrapper {
  width: 550rpx;
  height: 744rpx;
  background: #fff;
  margin: 40rpx auto 30rpx;
  box-shadow: 0 0 24rpx 0 rgba(0, 0, 0, 0.05);
  border-radius: 16rpx;
  overflow: hidden;
}

.pic {
  width: 550rpx;
  height: 550rpx;
}

.pic image {
  width: 100%;
  height: 100%;
}

.foot {
  margin: 20rpx;
}

.foot .adv .txt {
  color: #262628;
  font-size: 24rpx;
  font-family: 'PingFangSC-Medium';
  line-height: 1.4;
  margin-bottom: 10rpx;
}

.foot .adv .tip {
  color: rgba(0, 0, 0, 0.5);
  font-size: 20rpx;
}

.foot .qrcode {
  width: 158rpx;
  height: 158rpx;
  flex-shrink: 0;
}

.foot .qrcode image {
  width: 100%;
  height: 100%;
  transition: all 0.4s ease;
}

.foot .qrcode image.big {
  position: fixed;
  width: 100%;
  height: 750rpx;
  top: 50%;
  left: 0;
  transform: translate3d(0, -50%, 0);
  z-index: 99;
}

.preview {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.9);
  z-index: -1;
  opacity: 0;
  transition: all 0.4s ease;
}

.preview.show {
  z-index: 1;
  opacity: 1;
}

.canvas {
  width: 1100rpx;
  height: 1500rpx;
  position: fixed;
  top: 0;
  /* left: -20px; */
  left: -10000px;
}

.dialog, .dialog .mask {
  position: fixed;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
}

.dialog .mask {
  background: rgba(0, 0, 0, 0.8);
}

.dialog .content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate3d(-50%, -50%, 0);
  width: 500rpx;
  text-align: center;
}

.dialog .content .wx {
  width: 500rpx;
  height: 500rpx;
  vertical-align: top;
  margin: 0 auto;
}

.dialog .content .close {
  width: 80rpx;
  height: 80rpx;
  margin: 60rpx auto;
}
