/* pages/testDetail/testDetail.wxss */

.head {
  text-align: center;
  padding: 50rpx 30rpx 0;
}

.head .icon {
  width: 176rpx;
  height: 176rpx;
  margin: 0 auto 30rpx;
  border-radius: 100%;
  background: #3d3bee;
}

.head .icon image {
  width: 68rpx;
  height: 48rpx;
  border-radius: 100%;
}

.head .txt {
  font-size: 26rpx;
  color: #000;
  margin-bottom: 34rpx;
}

.head .btn {
  width: 140rpx;
  height: 44rpx;
  margin: 0 auto;
  line-height: 44rpx;
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.6);
  border: 1px solid rgba(0, 0, 0, 0.6);
  border-radius: 44rpx;
}

.pic-wrapper {
  width: 550rpx;
  height: 744rpx;
  background: #fff;
  margin: 52rpx auto 30rpx;
  box-shadow: 0 0 24rpx 0 rgba(0, 0, 0, 0.05);
  border-radius: 16rpx;
  overflow: hidden;
}

.pic {
  width: 550rpx;
  height: 550rpx;
}

.pic image {
  width: 100%;
  height: 100%;
}

.foot {
  margin: 20rpx;
}

.foot .adv .txt {
  color: #262628;
  font-size: 24rpx;
  font-family: 'PingFangSC-Medium';
  line-height: 1.4;
  margin-bottom: 10rpx;
}

.foot .adv .tip {
  color: rgba(0, 0, 0, 0.5);
  font-size: 20rpx;
}

.foot .qrcode {
  width: 158rpx;
  height: 158rpx;
  flex-shrink: 0;
}

.foot .qrcode image {
  width: 100%;
  height: 100%;
	transition: all .4s ease;
}

.foot .qrcode image.big{
	position: fixed;
	width: 100%;
	height: 750rpx;
	top: 50%;
	left: 0;
	transform: translate3d(0, -50%, 0);
	z-index: 99
}

.preview{
	position: fixed;
	width: 100%;
	height: 100%;
	top: 0;
	left: 0;
	background: rgba(0, 0, 0, 0.9);
	z-index: -1;
	opacity: 0;
	transition: all .4s ease;
}

.preview.show{
	z-index: 1;
	opacity: 1;
}

.canvas{
	width: 1100rpx;
	height: 1500rpx;
	position: fixed;
	top: 0;
	left: -10000px;
}