/* pages/myAddress/myAddress.wxss */

.container {
  overflow: hidden;
}

.addr-list {
  padding: 30rpx;
}

.item {
  width: 100%;
  padding: 30rpx;
  font-size: 24rpx;
  color: #000;
  margin-bottom: 30rpx;
  background: #fff;
  box-shadow: 0 0 12rpx 0 rgba(0, 0, 0, 0.1);
  border-radius: 16rpx;
  box-sizing: border-box;
}

.item .info {
  margin-bottom: 20rpx;
}

.item .addr {
  line-height: 1.5;
}

.item .op {
  padding: 28rpx 0 0;
  text-align: right;
  margin-top: 30rpx;
  border-top: 1px solid rgba(0, 0, 0, 0.05);
}

.item .op .op-item {
  color: rgba(0, 0, 0, 0.5);
  display: inline;
}

.map-pic {
  width: 204rpx;
  height: 204rpx;
  margin: 104rpx auto 0;
  border: 2px solid rgba(0, 0, 0, 0.05);
  border-radius: 100%;
}

.map-pic image {
  width: 88rpx;
  height: 88rpx;
}

.tip {
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.3);
  margin-top: 40rpx;
  text-align: center;
}

.btn {
  width: 100%;
  height: 88rpx;
  position: absolute;
  bottom: 60rpx;
  left: 0;
  padding: 0 60rpx;
  box-sizing: border-box;
}

.btn .nav-a {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: #3d3bee;
  font-size: 28rpx;
  color: #fff;
}
