/* pages/progress/progress.wxss */

.nav {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: rgba(0, 0, 0, 0.05);
}

.nav .nav-a {
  width: 33.33%;
  color: rgba(0, 0, 0, 0.3);
  font-size: 28rpx;
  text-align: center;
}

.nav .nav-a.on {
  color: #000;
}

.prog-list {
  padding: 30rpx;
}

.prog-list .item {
  width: 100%;
  margin-bottom: 30rpx;
  background: #fff;
  box-shadow: 0 0 12rpx 0 rgba(0, 0, 0, 0.05);
  border-radius: 16rpx;
}

.prog-list .pic {
  width: 198rpx;
  height: 198rpx;
  flex-shrink: 0;
  background: f5f7f6;
  border-radius: 16rpx 0 0 16rpx;
}

.prog-list .pic image {
  width: 100%;
  height: 100%;
  background: #f5f7f6;
}

.prog-list .infos {
  padding: 0 20rpx;
}

.prog-list .title {
  font-size: 32rpx;
  color: #262628;
  letter-spacing: 1rpx;
  font-family: 'PingFangSC-Medium';
}

.prog-list .apply {
  font-size: 24rpx;
  margin-top: 20rpx;
}

.prog-list .apply .num {
  color: rgba(0, 0, 0, 0.3);
}

.prog-list .apply .state {
  color: #000;
}

.loadmore {
  text-align: center;
  font-size: 26rpx;
  color: #aaa;
  margin: 20rpx 0;
}

.loadmore.no {
  margin: 100rpx 0;
}
