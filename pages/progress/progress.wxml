<!--pages/progress/progress.wxml-->
<view class='container'>
		<view class='nav flex'>
			<view class='nav-a {{tab == 1 ? "on":""}}' data-tab='1' catchtap='switchTab'>已申请</view>
			<view class='nav-a {{tab == 2 ? "on":""}}' data-tab='2' catchtap='switchTab'>已选中</view>
			<view class='nav-a {{tab == 3 ? "on":""}}' data-tab='3' catchtap='switchTab'>已完成</view>
		</view>
	<block wx:if='{{isLogin}}'>
		<view class='prog-list'>
			<view class='item flex' wx:for='{{trialList}}' wx:key='proId'>
				<view class='pic'>
					<image src='{{item.proImg}}'></image>
				</view>
				<view class='infos flex1 fcol spb'>
					<view class='title'>{{item.proName}}</view>
					<view class='apply flex spb'>
						<view class='num'>{{item.applyPeopleNum}}人申请</view>
						<view class='state' wx:if='{{item.trialProgressType == 1}}'>已申请</view>
						<view class='state' wx:elif='{{item.trialProgressType == 2}}'>已选中</view>
						<view class='state' wx:elif='{{item.trialProgressType == 3}}'>已完成</view>
					</view>
				</view>
			</view>
			<view class='item flex'>
				<view class='pic'>
					<image src='../../img/bao.png'></image>
				</view>
				<view class='infos flex1 fcol spb'>
					<view class='title'>Supreme&Lv联名款限量版卫衣震撼来袭震撼来袭震撼来袭震撼来袭震撼来袭</view>
					<view class='apply flex spb'>
						<view class='num'>222人申请</view>
						<view class='state'>已申请</view>
					</view>
				</view>
			</view>
		</view>
		<view class='loadmore no' wx:if='{{hasmore == 0}}'>暂无数据~</view>
		<view class='loadmore' wx:if='{{hasmore == 1 && page == 1}}'>没有更多数据了~</view>
		<view class='loadmore' wx:if='{{hasmore == 1 && page > 1}}'>到底了，别扯了~</view>
		<view class='loadmore' wx:if='{{hasmore == 2}}'>上拉加载更多~</view>
	</block>
	<view class='btn-wrapper' wx:else>
		<button open-type='getUserInfo' bindgetuserinfo='getUserInfo' class='login-btn'>授权登录</button>
	</view>
</view>
<view class='tips' wx:if='{{toast.show}}'>{{toast.title}}</view>